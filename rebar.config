{cover_enabled, true}.

{clean_files, ["*.eunit", "ebin/*.beam"]}.
{eunit_opts, [verbose, {report, {eunit_surefire, [{dir, "."}]}}]}.

{erl_opts, [%{d,'DEBUG',true},
            {d,'USE_EBLOOM',true},
            {parse_transform, lager_transform},
            fail_on_warning,
            warn_unused_vars,
            warn_export_all,
            warn_shadow_vars,
            warn_unused_import,
            warn_unused_function,
            warn_bif_clash,
            warn_unused_record,
            warn_deprecated_function,
            warn_obsolete_guard,
            warn_export_vars,
            warn_exported_vars,
            warn_untyped_record,
            % warn_missing_spec,
            % strict_validation,
            {platform_define, "^R|17", pre18},
            debug_info]}.

{xref_checks, [undefined_function_calls]}.

